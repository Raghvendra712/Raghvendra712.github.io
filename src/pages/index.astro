---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import AvailableForWork from "../components/available.astro";
import VidBackground from "../components/vid-background.astro";
import VideoMuteToggle from "../components/VideoMuteToggle.tsx";

---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10">
				<!-- <WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/> -->
				<VidBackground>
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> Raghvendra <br /> Singh </H1>
					<br/>
					<H1 size="default"> Writer <br/> Editor <br/> Director</H1>
				</div>
			
			<div class="p-8" style="position: fixed; right: 2em; top; 2em;">
					<VideoMuteToggle
					client:load
					videoId="myVideo"
					className="w-9 h-9 rounded-full text-gray-200"
					/>
			</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="/contact">Contact</Link>
						</div>

						<Navigation client:load>
							<Link href="/blog" variant="secondary">Blog</Link>
							<Link href="/portfolio" variant="secondary">Portfolio</Link>
							<Link href="/about" variant="secondary">About</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
