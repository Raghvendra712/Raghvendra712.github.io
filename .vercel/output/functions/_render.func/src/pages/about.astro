---
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import { client } from "../../tina/__generated__/client";
import { TinaMarkdown } from "tinacms/dist/rich-text";

const about = await client.queries.about({ relativePath: 'about.md' });
---

<InfoLayout>
          <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh flex flex-col justify-between gap-32">
          <div class="space-y-4 sm:space-y-12">
               <H1> { about.data.about.title }</H1>

               <div class="text-xl xl:text-2xl text-zinc-500 text-balance text-zinc-400">
                    <TinaMarkdown content={about.data.about.description} />
               </div>
          </div>

          <div class="space-y-2 text-base sm:text-lg">
               <h2 class="px-4 text-zinc-400 underline underline-offset-4 decoration-zinc-500">Achievements</h2>
               <ul class="px-4 text-zinc-400 list-disc list-outside">
                    <TinaMarkdown content={about.data.about.achievements} />
               </ul>
          </div>
     </div>


</InfoLayout>
